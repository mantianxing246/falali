.bj {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background: #000;
    padding: 0 26rpx;
}

.topImg {
    width: 100%;
    height: 370rpx;
}

.select {
    padding: 60rpx 0 80rpx;
    border-bottom: 1px dotted #979797;
    overflow: hidden;
    font-size: 14px;
    color: white;
}

.imgLayout {
    display: flex;
    align-items: center;
    overflow: hidden;
    justify-content: space-between;
    height: 100%;
}

.imgLayout image {
    width: 32rpx;
    height: 20rpx;
    margin-right: 10%;
}

.dselect-city {
    width: 32%;
    height: 40px;
    line-height: 36px;
    border: 1px solid #797a7a;
    overflow: hidden;
    float: left;
    position: relative;
    box-sizing: border-box;
    font-size: 14px;
}

.dselect-city text {
    padding-left: 10%;
    box-sizing: border-box;
}

.dselect-distributor {
    width: 55%;
    height: 40px;
    line-height: 36px;
    border: 1px solid #797a7a;
    overflow: hidden;
    float: right;
    position: relative;
    box-sizing: border-box;
    font-size: 14px;
}

.dselect-distributor text {
    padding-left: 10%;
    box-sizing: border-box;
    /* background: url("/images/icon-dropdown.png") no-repeat; */
}

.text {
    font-size: 14px;
}

.text view {
    margin-bottom: 30rpx;
}

.text view:nth-of-type(1) {
    font-size: 16px;
    margin-bottom: 20rpx;
}

.bottom {
    height: 10%;
    background: white;
    display: flex;
    align-items: center;
    justify-content: space-between;
    position: absolute;
    bottom: 0;
    width: 100%;
    padding: 0 26rpx;
    box-sizing: border-box;
    font-size: 14px;
}

.text {
    margin-top: 8%;
    color: white;
}

.text view {
    font-size: 16px;
}

.bottom view {
    width: 45%;
    height: 70%;
    box-sizing: border-box;
    border: 1px solid #000;
    display: flex;
    align-items: center;
    justify-content: space-around;
    padding: 0 80rpx 0 70rpx;
    box-sizing: border-box;
}

.bottom image {
    width: 40rpx;
    height: 40rpx;
}

.active {
    background: #000;
    color: white;
}

.phoneSelect {
    background: #f2f2f2;
    position: absolute;
    bottom: 0;
    width: 100%;
    z-index: 9999;
    color: #a4a4a4;
    font-size: 14px;
    transform: translateY(100%);
}

.phoneSelect view {
    height: 60px;
    text-align: center;
    line-height: 60px;
    color: #000;
    background: white;
}

.phoneSelect view:nth-of-type(2) {
    margin-bottom: 10px;
}

.phoneSelect view:nth-of-type(3) {
    font-size: 14px;
}

#isPhone {
    height: 50px;
    text-align: center;
    line-height: 50px;
    color: #a4a4a4;
    background: #f2f2f2;
}

.phone-select-model,
.city {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background: rgba(0, 0, 0, 0.5);
}



.city {
    /* transform: translateY(100%); */
}

.city-select-button {
    border-bottom: 1px solid #f9f9f9;
    height: 100rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 10%;
    box-sizing: border-box;
}

.city-select-button view:nth-of-type(2) {
    color: #3a3a3a;
}

.city-select-button view:nth-of-type(1) {
    color: #e0e0e0;
}

.city-select-view { 
    position: absolute;
    width: 100%;
    bottom: 0;
    background: white;
    transform: translateY(100%);
}

.gifImg {
    width: 100rpx;
    height: 100rpx;
}

.location-map {
    width: 100vw;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    flex-direction: column;
}
.location-map-view{
    width: 200rpx;
    height: 200rpx;
    background: #000;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    flex-direction: column;
}